<%= form_for @appointment do |f| %>
   <%= f.label :patient_id %>
   <%= f.collection_select(:patient_id, Patient.all, :id, :name) %>
   <br>
   <%= f.label :condition %>
   <%= f.text_field :condition %>
   <br>
   <%= f.label :doctor_id %>
   <%= f.collection_select(:doctor_id, Doctor.all, :id, :name) %>
   <br>
   <%= f.label :date %>
   <%= select_date Date.today, :prefix => :date %>
   <br>
   <%= f.label :time %>
   <%= select_time Time.now, :prefix => :time %>
   <br>
   <%= f.submit %>
<% end %>
