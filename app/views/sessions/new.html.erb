<h2> Login</h2>

<% if flash[:my_error] %>
<%= flash[:my_error] %>
<%end%>

<%= form_for :session, url: login_path, :html => {:class => "form-horizontal center"} do |f| %>
      <div class="form-group">
         <%= f.label :name, "name:", class: "col-md-4 control-label" %>
         <div class="col-md-8">
            <%= f.text_field :name, class: "form-control" %>
         </div>
      </div>
      <div class="form-group">
         <%= f.label :password, "password:", class: "col-md-4 control-label" %>
         <div class="col-md-8">
            <%= f.password_field :password, class: "form-control" %>
         </div>
      </div>

      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
<% end %>

