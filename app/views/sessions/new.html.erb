<h2> Login</h2>

<% if flash[:my_error] %>
<%= flash[:my_error] %>
<%end%>

<%= form_for :session, url: login_path do |f| %>
   <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
   <%= f.label :name %>
   <%= f.text_field :name %>

   <%= f.label :password %>
   <%= f.password_field :password %>

   <%=f.submit%>

<%end%>