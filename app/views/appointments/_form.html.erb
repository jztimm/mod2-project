<%= form_for @appointment do |f| %>
   <%= f.label :patient_id %>
   <%= f.collection_select(:patient_id, Patient.all, :id, :name) %>
   <br>
   <%= f.label :condition %>
   <%= f.text_field :condition %>
   <br>
   <%= f.label :doctor_id %>
   <%= f.collection_select(:doctor_id, Doctor.all, :id, :name) %>
   <br>
   <%= f.label :date %>
   <%= f.date_field(:date, order: [:month, :day, :year])%>
   <br>
   <%= f.label :time %>
   <%= time_field(:time, order: [:hour, :minute]) %>
   <br>
   <%= f.submit %>
<% end %>
